<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seeedstudio.node"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.seeedstudio.node.ble.DeviceListActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog" />

        <service
            android:name="com.seeedstudio.node.ble.UartService"
            android:enabled="true" />

        <activity
            android:name="com.seeedstudio.node.ui.NodeActivity"
            android:label="@string/title_activity_node" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.seeedstudio.node.ui.SensorListActivity"
            android:label="@string/title_activity_sensor_list"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seeedstudio.node.ui.NodeActivity" />
        </activity>
        <activity
            android:name="com.seeedstudio.node.ui.SensorActivity"
            android:label="@string/title_activity_sensor" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seeedstudio.node.ui.SensorListActivity" />
        </activity>
        <activity
            android:name="com.seeedstudio.node.ui.MapActivity"
            android:label="@string/title_activity_map" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seeedstudio.node.ui.NodeActivity" />
        </activity>
        <activity
            android:name="com.seeedstudio.node.ui.ActuatorListActivity"
            android:label="@string/title_activity_actuator_list"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seeedstudio.node.ui.NodeActivity" />
        </activity>
        <activity
            android:name="com.seeedstudio.node.ui.LedActivity"
            android:label="@string/title_activity_led" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seeedstudio.node.ui.ActuatorListActivity" />
        </activity>
        <activity
            android:name="com.seeedstudio.node.ble.DeviceBaseActivity"
            android:label="@string/title_activity_device_base" >
        </activity>
        <activity
            android:name="com.seeedstudio.node.ui.RelayActivity"
            android:label="@string/title_activity_relay" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seeedstudio.node.ui.ActuatorListActivity" />
        </activity>
        <activity
            android:name="com.seeedstudio.node.ui.ColorPixelsActivity"
            android:label="@string/title_activity_color_pixels" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.seeedstudio.node.ui.ActuatorListActivity" />
        </activity>
    </application>

</manifest>