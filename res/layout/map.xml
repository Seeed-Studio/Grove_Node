<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp" >

    <ListView
        android:id="@+id/ifttt_list_view"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >
    </ListView>

    <Button
        android:id="@+id/add_ifttt_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onAddButtonClick"
        android:text="Add" />

    <TextView
        android:id="@+id/then_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_ifttt_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="then"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/event_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/then_text_view"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/then_text_view" />

    <TextView
        android:id="@+id/if_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/event_spinner"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/event_spinner"
        android:text="if"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/action_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/then_text_view"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/then_text_view" />

</RelativeLayout>